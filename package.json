{
  "name": "clone-tools",
  "version": "1.0.0",
  "description": "Personal Git repo clone & launcher",
  "author": "adydetra",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"bun run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "electron ./electron/main.cjs",
    "build:renderer": "vite build",
    "build:win": "bun run build:renderer && bunx electron-builder@24.6.3 --win",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.adydetra.clonetools",
    "artifactName": "${productName} Setup ${version}.${ext}",
    "productName": "Clone Tools",
    "files": [
      "dist/",
      "electron/",
      "build/icon.ico",
      "config.json",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeader": "installerHeader.bmp",
      "installerSidebar": "installerSidebar.bmp",
      "uninstallerSidebar": "uninstallerSidebar.bmp",
      "uninstallDisplayName": "Clone Tools",
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "adydetra",
      "repo": "clone-tools"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adydetra/clone-tools.git"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@iconify/react": "^6.0.2",
    "@octokit/auth-oauth-device": "^8.0.3",
    "@octokit/rest": "^22.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "electron-updater": "^6.7.3",
    "extract-zip": "^2.0.1",
    "framer-motion": "^12.29.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^39.3.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "vite": "^7.3.1"
  }
}
